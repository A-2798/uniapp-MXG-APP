/* 解决 H5 的问题 */







.text-ellipsis {
	overflow: hidden;
	text-overflow: ellipsis; /*显示省略号
 */
	-webkit-line-clamp: 2; /*最多2行
 */
	display: -webkit-box;
	-webkit-box-orient: vertical;
	white-space: normal;
}
/* 蒙层 */
.mask {
	z-index: 99;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0,0,0,0.7);
}

